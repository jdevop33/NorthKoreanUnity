{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler", // Changed from "node" to "bundler" for modern TS/Next.js
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // Keep JSX as preserve for Next.js
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./client/src/*"], // Will likely need adjustment for new structure
      "@shared/*": ["./shared/*"] // Will likely need adjustment
    }
  },
  "include": [
    "next-env.d.ts", 
    "**/*.ts", 
    "**/*.tsx", 
    ".next/types/**/*.ts",
    // Keep existing includes for now, adjust later
    "client/src/**/*", 
    "shared/**/*", 
    "server/**/*" 
  ],
  "exclude": ["node_modules", "dist", ".next", "out"]
}
