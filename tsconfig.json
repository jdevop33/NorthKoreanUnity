{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true, // Keep true for importing JSON locales
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/lib/*": ["./lib/*"], // Point to root lib
      "@/hooks/*": ["./hooks/*"], // Point to root hooks
      "@/locales/*": ["./locales/*"], // Point to root locales
      "@shared/*": ["./shared/*"] // Keep if shared dir is used
      // No alias needed for public/assets
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mjs",
    "**/*.json", // Include JSON files for locales
    ".next/types/**/*.ts",
    "app/**/*",
    "components/**/*",
    "lib/**/*", // Include root lib
    "hooks/**/*", // Include root hooks
    "locales/**/*", // Include root locales
    "shared/**/*" 
    // No need to explicitly include client/src anymore if empty
    // No need to explicitly include public
  ],
  "exclude": [
    "node_modules", 
    "dist", 
    ".next", 
    "out",
    "client" // Exclude the old client directory entirely
  ]
}
